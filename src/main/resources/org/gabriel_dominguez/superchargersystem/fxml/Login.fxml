<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.gabriel_dominguez.superchargersystem.controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Inicio de Sesión" style="-fx-font-size: 24px;"/>

    <TextField fx:id="usuarioField"
               promptText="Usuario"
               maxWidth="300"/>

    <PasswordField fx:id="passwordField"
                   promptText="Contraseña"
                   maxWidth="300"/>

    <Button text="Ingresar"
            onAction="#handleLogin"
            maxWidth="300"/>

    <Label fx:id="mensajeError"
           textFill="RED"/>
</VBox>